extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Department:
      input#name.form-control(type='text', placeholder='Bakery, Dairy etc.' name='name' value=(undefined===department ? '' : department.name), required='true' )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg